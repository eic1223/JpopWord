<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/songs_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/top_navigation_linearView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#00FFFFFF"
        android:elevation="8dp"
        android:padding="8dp"
        app:bnc_mode="spread">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_feed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="4dp"
            app:bt_active="true"
            app:bt_colorActive="#E91E63"
            app:bt_colorInactive="#F06292"
            app:bt_icon="@drawable/ic_menu_white_48dp"
            app:bt_iconHeight="32dp"
            app:bt_iconWidth="32dp"
            app:bt_padding="4dp"
            app:bt_title="@string/songs_tab_feed"
            app:bt_titlePadding="8dp"
            app:bt_titleSize="16sp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_voca"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="4dp"
            app:bt_active="true"
            app:bt_colorActive="#FFA000"
            app:bt_colorInactive="#FFD54F"
            app:bt_icon="@drawable/ic_star_black_24dp"
            app:bt_iconHeight="32dp"
            app:bt_iconWidth="32dp"
            app:bt_padding="4dp"
            app:bt_title="@string/songs_tab_voca"
            app:bt_titlePadding="8dp"
            app:bt_titleSize="16sp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="4dp"
            app:bt_active="true"
            app:bt_colorActive="#1976D2"
            app:bt_colorInactive="#64B5F6"
            app:bt_icon="@drawable/ic_favorite_black_24dp"
            app:bt_iconHeight="32dp"
            app:bt_iconWidth="32dp"
            app:bt_padding="4dp"
            app:bt_title="@string/songs_tab_favorites"
            app:bt_titlePadding="8dp"
            app:bt_titleSize="16sp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="4dp"
            app:bt_active="true"
            app:bt_colorActive="#388E3C"
            app:bt_colorInactive="#81C784"
            app:bt_icon="@drawable/ic_mood_white_48dp"
            app:bt_iconHeight="32dp"
            app:bt_iconWidth="32dp"
            app:bt_padding="4dp"
            app:bt_title="@string/songs_tab_about"
            app:bt_titlePadding="8dp"
            app:bt_titleSize="16sp" />

        <!-- Add more child items here - max upto 5 -->

    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>

    <FrameLayout
        android:id="@+id/songs_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

    <ScrollView
        android:id="@+id/songs_scrollView_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/sogns_feed_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/songs_textView_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="COPYRIGHT. All rights deserved. 노래로 자연스럽게 배우는 일본어. 공부하지말고 놀면서 배우자. 한국인이 배우기 가장 쉬운 외국어. 이정도는 교양으로 하자. 개발자는 이런 방법으로 JLPT 2급을 땄습니다(2018). 궁금한 점 있으시다면 언제든지 연락주세요" />

        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/songs_scrollView_voca"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/songs_voca_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/songs_layout_voca_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="단어장을 채워볼까요?"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/songs_layout_voca_is"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/songs_recyclerView_voca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/songs_scrollView_favorites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/songs_layout_favorites_is"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/songs_recyclerView_favorites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/songs_layout_favorites_none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:gravity="center"
                    android:text="@string/songs_favorites_none_guide" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/songs_scrollView_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/songs_about_box_guestUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="32dp"
                    android:text="@string/songs_about_guestUser_guide"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/songs_about_btn_login"
                    style="@style/FirebaseUI.Button.AccountChooser"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:text="@string/songs_about_guestUser_btnLogin"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/songs_about_box_loginUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="계정"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/songs_about_textView_userId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="2"
                        android:text="id@mail.com"
                        android:textAlignment="textStart" />

                    <TextView
                        android:id="@+id/songs_about_btn_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_weight="2"
                        android:text="로그아웃"
                        android:textAlignment="textEnd" />

                </LinearLayout>

                <View
                    android:id="@+id/songs_about_divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/songs_about_textView_badge_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="뱃지"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/songs_about_recyclerView_badge"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="16dp">

                </androidx.recyclerview.widget.RecyclerView>

                <View
                    android:id="@+id/songs_about_divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/songs_about_textView_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="카테고리"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/songs_about_recyclerView_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" />

                <View
                    android:id="@+id/songs_about_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:background="?android:attr/listDivider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/songs_about_box_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="@dimen/browser_actions_context_menu_min_padding"
                    android:text="문의 및 노래 요청"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:text="@string/songs_about_notice_description" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/cat_hand" />
                </LinearLayout>

                <Button
                    android:id="@+id/songs_about_btn_send_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="#0288D1"
                    android:text="@string/songs_about_send_email"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/songs_about_box_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/about_banner_blog_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/thumb_kataomoi" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:alpha=".4"
                        android:background="#66000000"
                        app:srcCompat="@color/common_google_signin_btn_text_dark_focused" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="ㅇㅇㅇ 블로그"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/about_banner_mail_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/thumb_kumotoyurei" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:alpha="0.4"
                        app:srcCompat="@color/common_google_signin_btn_text_dark_focused" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_mail_outline_black_24dp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="원하는 노래가 있나요?"
                        android:textAlignment="center"
                        android:textColor="#FDFFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="copyright all reserved. 궁금한 점이나 요청 사항이 있다면 메일 보내주세요. xxx@naver.com"
                    android:textSize="10sp" />

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>