<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/favorites_imageView_thumb"
        android:layout_width="144dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic[5]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="false"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/favorites_imageView_thumb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favorites_textView_titleKor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeStepGranularity="3dp"
            android:autoSizeTextType="uniform"
            android:text="세계는 사랑에 빠져있어"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favorites_textView_singerKor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeStepGranularity="3dp"
            android:autoSizeTextType="uniform"
            android:text="CHiCO"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/favorites_imageBtn_heart"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/heart_red" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/favorites_imageView_thumb"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray" />
</RelativeLayout>