<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QuizFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/quizFragment_layout_beforeStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/quizFragment_beforeStart_textView_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/imageView13"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/quizFragment_beforeStart_guide"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="false"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/cat_front" />

            <Button
                android:id="@+id/quizFragment_btn_startQuiz"
                style="@android:style/Widget.DeviceDefault.Light.Button"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_above="@id/empty_view"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/radius"
                android:backgroundTint="#1E88E5"
                android:text="퀴즈 풀기"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/quizFragment_layout_onGoing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/quizFragment_box_result_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#FFFFFF"
                    android:tint="#388E3C"
                    app:srcCompat="@drawable/ic_check_white_48dp" />

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#FFFFFF"
                    android:tint="#388E3C"
                    app:srcCompat="@drawable/ic_check_white_48dp" />

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#FFFFFF"
                    android:tint="#388E3C"
                    app:srcCompat="@drawable/ic_check_white_48dp" />

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#FFFFFF"
                    android:tint="#388E3C"
                    app:srcCompat="@drawable/ic_check_white_48dp" />

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_5"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#FFFFFF"
                    android:tint="#388E3C"
                    app:srcCompat="@drawable/ic_check_white_48dp" />

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_6"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#FFFFFF"
                    android:tint="#388E3C"
                    app:srcCompat="@drawable/ic_check_white_48dp" />

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_7"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#FFFFFF"
                    android:tint="#388E3C"
                    app:srcCompat="@drawable/ic_check_white_48dp" />

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_8"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#FFFFFF"
                    android:tint="#388E3C"
                    app:srcCompat="@drawable/ic_check_white_48dp" />

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_9"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:backgroundTint="#FFFFFF"
                    android:tint="#388E3C"
                    app:srcCompat="@drawable/ic_check_white_48dp" />

                <ImageView
                    android:id="@+id/quizFragment_imageView_resultIcon_10"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:tint="#C2185B"
                    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/quizFragment_box_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/quizFragment_box_optionBtns"
                android:layout_below="@id/quizFragment_box_result_now"
                android:layout_centerInParent="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/quizFragment_textView_questionNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7/10"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/quizFragment_textView_questionWordHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="hint"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/quizFragment_textView_questionWord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="shine"
                        android:textAlignment="center"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/empty_view3"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:visibility="invisible" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/quizFragment_box_optionBtns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/empty_view2"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/quizFragment_btn_option1"
                    style="@android:style/Widget.Material.Light.Button"
                    android:layout_width="360dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="#1976D2"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans"
                    android:maxLines="1"
                    android:text="option 1"
                    android:textColor="#F4F0F0"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/quizFragment_btn_option2"
                    android:layout_width="360dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="#1976D2"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans"
                    android:maxLines="1"
                    android:text="option 2"
                    android:textColor="#F4F0F0"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/quizFragment_btn_option3"
                    android:layout_width="360dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/radius"
                    android:backgroundTint="#1976D2"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans"
                    android:maxLines="1"
                    android:text="option 3"
                    android:textColor="#F4F0F0"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/empty_view2"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:visibility="invisible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/quizFragment_layout_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/quizFragment_layout_result_wrongWordsNone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:text="@string/quizFragment_result_perfect"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="16dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cat_front" />



                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/quizFragment_layout_result_wrongWordsIs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/quizFragment_layout_result_wrongWordsNone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:text="@string/quizFragment_result_end"
                            android:textAlignment="center"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/quizFragment_textView_result_finalScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="단어 0개만 다시 살펴볼까요?"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cat_hand" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/quizFragment_recyclerView_result_wrongWords"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="이런 노래는 어때요?"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/quizFragment_result_recyclerView_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>