<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/quiz_cardView_card"
        android:layout_width="320dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/quiz_imagView_card_thumb"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/backgrounds/scenic[14]" />

            <ImageView
                android:id="@+id/quiz_imagView_card_channel"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="157.5dp"
                android:layout_marginTop="148dp"
                android:layout_marginEnd="157.5dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@+id/quiz_textView_card_singer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[14]" />

            <TextView
                android:id="@+id/quiz_textView_card_singer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/quiz_textView_card_title"
                android:layout_marginTop="12dp"
                android:text="name"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quiz_imagView_card_channel" />

            <TextView
                android:id="@+id/quiz_textView_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:text="Title"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quiz_textView_card_singer" />

            <TextView
                android:id="@+id/quiz_textView_card_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="7/10"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quiz_textView_card_title" />

            <!--<ImageView
                android:id="@+id/quiz_imageView_confirm"
                android:layout_width="80dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_star_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>-->

            <LinearLayout
                android:id="@+id/quiz_box_stars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/quiz_btn_comfirm_card_get"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quiz_textView_card_result"
                app:layout_constraintVertical_bias="0.177">

                <ImageView
                    android:id="@+id/quiz_imageView_card_star1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/ic_star_black_24dp" />

                <ImageView
                    android:id="@+id/quiz_imageView_card_star2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/ic_star_black_24dp" />

                <ImageView
                    android:id="@+id/quiz_imageView_card_star3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:srcCompat="@drawable/ic_star_black_24dp" />
            </LinearLayout>

            <Button
                android:id="@+id/quiz_btn_comfirm_card_get"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="106dp"
                android:layout_marginEnd="106dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:background="#64B5F6"
                android:text="확인"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>